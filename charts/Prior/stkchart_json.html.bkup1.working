    //---------------Json--------------------------------
    anychart.data.loadJsonFile(url, function(data) {

    var dataTable = anychart.data.table('TkrDate', "yyyy-MM-dd");
    dataTable.addData(data);
    var mapping = dataTable.mapAs({
      'open': "Open",
      'high': "High",
      'low': "Low",
      'close': "Close",
      'value': "Close",
    });

    //------init chart --------------------------

    chart = anychart.stock();
    chart.crosshair(true);

    //-----  plot0 - candlestick with series sma50 and sma200 -----------------------------------------------

    var plot0 = chart.plot(0);
    plot0.yGrid(true)
      .xGrid(true)
      .yMinorGrid(true)
      .xMinorGrid(true);

    var cs = plot0.candlestick(mapping);
    cs.name('MSFT').legendItem().iconType('rising-falling');

    chart.scroller().candlestick(mapping);
    chart.container('container');
    chart.draw();
    rangePicker = anychart.ui.rangePicker();
    rangePicker.render(chart);

    rangeSelector = anychart.ui.rangeSelector();
    rangeSelector.render(chart);



