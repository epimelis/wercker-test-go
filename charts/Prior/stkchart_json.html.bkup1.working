    var url_csv2 = url_csv + '?tkr=' + tkr + '&sdate=' + sdate  + '&edate=' + edate;
    var url_json2 = url_json + '?tkr=' + tkr + '&sdate=' + sdate  + '&edate=' + edate;

    //var url = new URL(url_csv2);
    var url = new URL(url_json2);

    var param_tkr = url.searchParams.get("tkr");
